<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_background">

    <TextView
        android:id="@+id/exam_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome Esame"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_icon"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/exam_cfu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CFU: 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exam_name"
        app:layout_constraintEnd_toStartOf="@+id/edit_icon"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/exam_grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voto: 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exam_cfu"
        app:layout_constraintEnd_toStartOf="@+id/edit_icon"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Modifica"
        android:src="@drawable/edit"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/delete_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Elimina"
        android:src="@drawable/trash"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
